pipeline {
    agent any

    tools {
        // Instalar Maven desde las herramientas globales de Jenkins
        maven 'Maven 3.6.3'
        jdk 'jdk-11'
        jfrog 'jfrog-cli'
    }

    environment {
        ARTIFACTORY_URL = 'http://localhost:8082/artifactory/retailoff/'
        ARTIFACTORY_REPO = 'retailoff-dev'
        ARTIFACTORY_CREDS = credentials('your-credentials-id') // ID de las credenciales de Artifactory en Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                // Clonar el c√≥digo fuente desde el repositorio
                git url: 'https://github.com/Wildesdar37/retail-off.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                // Cambiar al directorio retailoff antes de ejecutar comandos
                dir('retailoff') {
                    // Limpiar y construir el proyecto Maven
                    sh 'mvn clean package'
                }
            }
        }

        stage('Test') {
            steps {
                // Cambiar al directorio retailoff antes de ejecutar comandos
                dir('retailoff') {
                    // Ejecutar los tests del proyecto Maven
                    sh 'mvn test'
                }
            }
        }

        stage('Publish to Artifactory') {
            steps {
                dir('retailoff') {
                    script {
                        sh 'echo ' + 'Publish to Artifactory'
                        sh 'jfrog rt config --url=http://localhost:8082/artifactory/retailoff/ --user=$ARTIFACTORY_CREDS_USR --password=$ARTIFACTORY_CREDS_PSW'
                        sh 'jfrog rt u "target/retailoff-0.0.1-SNAPSHOT.jar" "/jenkins/artifactory"'
                    }
                }
            }
        }
    }

    post {
        always {
            sh 'jfrog rt config --url=http://localhost:8082/artifactory/retailoff/ --user=$ARTIFACTORY_CREDS_USR --password=$ARTIFACTORY_CREDS_PSW --interactive=false --artifactory-id=retailoff --delete'
        }
        success {
            echo 'Build and tests were successful!'
        }
        failure {
            echo 'Build or tests failed.'
        }
    }
}
